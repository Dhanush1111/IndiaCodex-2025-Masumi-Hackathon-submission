# Production Environment Configuration
# Copy this to .env in production and update values

# Node Environment
NODE_ENV=production
PORT=8080

# CORS Origins
CORS_ORIGIN=https://cardanoverse-tradingcards.web.app,https://cardanoverse-tradingcards.firebaseapp.com

# Database (Cloud SQL)
DATABASE_URL=postgresql://user:password@/database?host=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME

# Redis (Memorystore)
REDIS_URL=redis://10.0.0.3:6379

# IPFS (Use managed service)
IPFS_API_URL=https://api.pinata.cloud
IPFS_API_KEY=your_pinata_api_key
IPFS_API_SECRET=your_pinata_api_secret

# Cardano Configuration
CARDANO_NETWORK=mainnet
BLOCKFROST_API_KEY=your_blockfrost_mainnet_api_key
BLOCKFROST_PROJECT_ID=your_project_id

# Masumi Network
MASUMI_NODE_URL=https://cardanoverse-masumi-XXXXXXXXXX-uc.a.run.app

# Sokosumi AI
SOKOSUMI_MCP_URL=https://cardanoverse-sokosumi-XXXXXXXXXX-uc.a.run.app

# CrewAI Service
CREWAI_SERVICE_URL=https://cardanoverse-crewai-XXXXXXXXXX-uc.a.run.app

# AI API Keys
OPENAI_API_KEY=sk-proj-XXXXXXXXXXXXXXXXXXXXXXXX
ANTHROPIC_API_KEY=sk-ant-XXXXXXXXXXXXXXXXXXXXXXXX
GOOGLE_AI_API_KEY=XXXXXXXXXXXXXXXXXXXXXXXX
COHERE_API_KEY=XXXXXXXXXXXXXXXXXXXXXXXX

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_at_least_32_chars_long
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
SENTRY_DSN=https://XXXXXXXXXXXXXXXXXXXXXXXX@sentry.io/XXXXXXX

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_P2P_NETWORKING=true
ENABLE_SMART_CONTRACTS=true
