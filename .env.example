# ==============================================
# CARDANOVERSE ENVIRONMENT CONFIGURATION
# ==============================================

# ==============================================
# CARDANO BLOCKCHAIN CONFIGURATION
# ==============================================
CARDANO_NETWORK=preprod
CARDANO_NETWORK_ID=0
BLOCKFROST_API_KEY=preprodYourBlockfrostAPIKeyHere
BLOCKFROST_URL=https://cardano-preprod.blockfrost.io/api/v0

# Cardano Node (Optional - if running own node)
CARDANO_NODE_SOCKET_PATH=/path/to/node.socket
CARDANO_NODE_HOST=localhost
CARDANO_NODE_PORT=3001

# NFT Minting Configuration
CARDANO_POLICY_ID=your_minting_policy_id_here
CARDANO_POLICY_PRIVATE_KEY=your_policy_private_key_here
MINTING_WALLET_SEED=your_wallet_seed_phrase_here
MINTING_WALLET_ADDRESS=addr_test1...

# CIP Standards
CIP25_METADATA_VERSION=1.0
CIP68_ENABLED=true

# ==============================================
# MASUMI NETWORK CONFIGURATION
# ==============================================
MASUMI_NODE_PORT=7777
MASUMI_NODE_HOST=0.0.0.0
MASUMI_BOOTSTRAP_PEERS=/ip4/104.131.131.82/tcp/4001/p2p/QmaCpDMGvV2BGHeYERUEnRQAwe3N8SzbUtfsmvsqQLuvuJ
MASUMI_PEER_ID=auto-generated
MASUMI_PRIVATE_KEY=auto-generated
MASUMI_ENABLE_DHT=true
MASUMI_ENABLE_PUBSUB=true
MASUMI_MAX_CONNECTIONS=50

# P2P Marketplace
MASUMI_MARKETPLACE_ENABLED=true
MASUMI_ORDER_BOOK_TOPIC=/cardanoverse/orderbook/v1
MASUMI_TRADE_TOPIC=/cardanoverse/trades/v1

# ==============================================
# SOKOSUMI AI AGENTS CONFIGURATION
# ==============================================
SOKOSUMI_MCP_URL=http://localhost:3000
SOKOSUMI_MCP_WS_URL=ws://localhost:3000
SOKOSUMI_API_KEY=your_sokosumi_api_key_here

# AI Agent Models
AI_VALUATION_MODEL=valuation-agent-v1
AI_TRADING_ADVISOR_MODEL=trading-advisor-v1
AI_MARKET_ANALYSIS_MODEL=market-analysis-v1
AI_RARITY_EVALUATOR_MODEL=rarity-evaluator-v1
AI_COLLECTION_OPTIMIZER_MODEL=optimizer-v1

# External AI APIs
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Agent Configuration
AI_CONFIDENCE_THRESHOLD=0.75
AI_UPDATE_INTERVAL=300000
AI_MAX_CONCURRENT_REQUESTS=10

# ==============================================
# IPFS / ARWEAVE STORAGE
# ==============================================
IPFS_GATEWAY=https://ipfs.io/ipfs/
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_AUTH=your_pinata_jwt_token_here
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key

# Arweave (Alternative Storage)
ARWEAVE_GATEWAY=https://arweave.net
ARWEAVE_WALLET_KEY=your_arweave_wallet_key

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_URL=postgresql://cardano_user:secure_password@localhost:5432/cardanoverse_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=cardanoverse_db
DATABASE_USER=cardano_user
DATABASE_PASSWORD=secure_password
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_TTL=3600

# ==============================================
# BACKEND API CONFIGURATION
# ==============================================
NODE_ENV=development
PORT=5000
API_VERSION=v1
API_BASE_URL=http://localhost:5000/api/v1

# Security
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long
JWT_EXPIRATION=7d
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================
VITE_API_URL=http://localhost:5000/api/v1
VITE_WS_URL=ws://localhost:5000
VITE_CARDANO_NETWORK=preprod
VITE_BLOCKFROST_API_KEY=preprodYourBlockfrostAPIKeyHere
VITE_IPFS_GATEWAY=https://ipfs.io/ipfs/

# Wallet Support
VITE_ENABLE_NAMI=true
VITE_ENABLE_ETERNL=true
VITE_ENABLE_FLINT=true
VITE_ENABLE_LACE=true
VITE_ENABLE_TYPHON=true

# Features
VITE_ENABLE_AI_AGENTS=true
VITE_ENABLE_P2P_TRADING=true
VITE_ENABLE_3D_CARDS=true
VITE_ENABLE_ANALYTICS=true

# ==============================================
# MONITORING & ANALYTICS
# ==============================================
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development
ENABLE_LOGGING=true
LOG_LEVEL=info

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your_mixpanel_token

# ==============================================
# SMART CONTRACT CONFIGURATION
# ==============================================
PLUTUS_VERSION=v3
AIKEN_VERSION=latest
CONTRACT_DEPLOYER_ADDRESS=addr_test1...
CONTRACT_DEPLOYER_KEY=your_deployer_key

# Contract Addresses (Update after deployment)
MARKETPLACE_CONTRACT=addr_test1...
MINTING_CONTRACT=addr_test1...
ESCROW_CONTRACT=addr_test1...
ROYALTY_CONTRACT=addr_test1...

# ==============================================
# DOCKER CONFIGURATION
# ==============================================
COMPOSE_PROJECT_NAME=cardanoverse
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# ==============================================
# PAYMENT & FEES
# ==============================================
PLATFORM_FEE_PERCENTAGE=2.5
CREATOR_ROYALTY_PERCENTAGE=5.0
MINIMUM_TRANSACTION_ADA=2.0
GAS_BUFFER_PERCENTAGE=10

# ==============================================
# NOTIFICATIONS
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@cardanoverse.io

# Discord Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# ==============================================
# TESTING
# ==============================================
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/cardanoverse_test
TEST_WALLET_SEED=test_seed_phrase_for_automated_testing_only
TEST_MODE=false
